rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;

      // Daily health data subcollection (HealthKit sync)
      match /dailyHealth/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Friends subcollection
      match /friends/{friendId} {
        allow read, write: if request.auth != null;
      }

      // Activity reactions - anyone authenticated can add/remove their own reactions
      match /activityReactions/{activityId}/reactions/{reactorId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == reactorId;
      }

      // Activity comments - anyone authenticated can read, users can write/delete their own comments
      match /activityComments/{activityId}/comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null &&
          (request.auth.uid == resource.data.commenterUid || request.auth.uid == userId);

        // Replies to comments
        match /replies/{replyId} {
          allow read: if request.auth != null;
          allow create: if request.auth != null;
          allow update, delete: if request.auth != null &&
            (request.auth.uid == resource.data.replierUid || request.auth.uid == userId);
        }
      }
    }

    // Usernames collection â€” only one user can claim a username
    match /usernames/{username} {
      allow read: if request.auth != null;
      // Only allow creating if the username doesn't already exist
      allow create: if request.auth != null && !exists(/databases/$(database)/documents/usernames/$(username));
      // Only the owner can update or delete their username reservation
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // Friend requests collection
    match /friendRequests/{requestId} {
      allow read, write: if request.auth != null;
    }

    // FCM tokens - users can only read/write their own token document
    match /userTokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
